<UserControl x:Class="MultiTool.Views.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:MultiTool.Views"
             DataContext="{Binding Welcome, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   <Grid Style="{StaticResource ContentRoot}">
      <ScrollViewer>
         <StackPanel >
            <TextBlock Text="MultiTool" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
            <mui:BBCodeBlock BBCode="[b]MultiTool[/b], is a set of utilities" Margin="0,0,0,32" />
            <TextBlock Text="Credits" Style="{StaticResource Heading2}" />
            <mui:BBCodeBlock BBCode="Make sure you visit the [url=/Views/Settings.xaml]settings[/url] to adapt the appearance to your preference." Margin="0,0,0,32"/>
         </StackPanel>
      </ScrollViewer>
   </Grid>
</UserControl>
